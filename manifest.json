{
  "manifest_version": 3,
  "name": "Better 42",
  "version": "2.0",
  "description": "Google extensions for the intranet 42 with advanced theme system and theme sharing",
  "content_scripts": [
    {
      "matches": ["https://profile-v3.intra.42.fr/*"],
      "css": [
        "assets/css/variables.css",
        "assets/css/theme.css",
        "assets/css/topbar.css",
        "assets/css/userStats.css",
        "assets/css/buttons.css",
        "assets/css/events.css",
        "assets/css/text.css",
        "assets/css/uiControls.css",
        "assets/css/popup.css",
        "assets/css/settingsSections.css",
        "assets/css/scrollbar.css"
      ],
      "js": [
        "js/sync/firebase/lib/firebase-app-compat.js",
        "js/sync/firebase/lib/firebase-firestore-compat.js",
        "js/sync/firebase/lib/firebase-auth-compat.js",
        "js/sync/firebase/config-local.js",
        "js/sync/firebase/themeSync-local.js",
        "js/sync/themeSyncAPI.js",
        "js/core/config.js",
        "js/detection/urlHelper.js",
        "js/detection/profileDetector.js",
        "js/managers/colorThemeManager.js",
        "js/managers/profileManager.js",
        "js/managers/backgroundManager.js",
        "js/managers/themeManager.js",
        "js/ui/uiManager.js",
        "main.js"
      ]
    }
  ],
  "permissions": ["activeTab"]
}
