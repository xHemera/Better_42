{
  "manifest_version": 2,
  "name": "Better 42",
  "version": "2.0",
  "description": "Extension for the intranet 42 with advanced theme system and theme sharing",
  "browser_specific_settings": {
    "gecko": {
      "id": "better42@intra42.extension",
      "strict_min_version": "109.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://profile-v3.intra.42.fr/*",
        "https://meta.intra.42.fr/*",
        "https://companies.intra.42.fr/*",
        "https://elearning.intra.42.fr/*",
        "https://projects.intra.42.fr/*"
      ],
      "css": [
        "assets/css/variables.css",
        "assets/css/theme.css",
        "assets/css/topbar.css",
        "assets/css/userStats.css",
        "assets/css/buttons.css",
        "assets/css/events.css",
        "assets/css/text.css",
        "assets/css/uiControls.css",
        "assets/css/popup.css",
        "assets/css/settingsSections.css",
        "assets/css/scrollbar.css"
      ],
      "js": [
        "js/sync/themeSyncAPI.js",
        "js/core/config.js",
        "js/detection/urlHelper.js",
        "js/detection/pageDetector.js",
        "js/detection/profileDetector.js",
        "js/themes/config.js",
        "js/managers/colorThemeManager.js",
        "js/managers/profileManager.js",
        "js/managers/backgroundManager.js",
        "js/managers/themeManager.js",
        "js/managers/clusterMapManager.js",
        "js/managers/logtimeStatsManager.js",
        "js/managers/timeRemainingManager.js",
        "js/managers/evaluationManager.js",
        "js/managers/sectionStyleManager.js",
        "js/ui/uiManager.js",
        "main.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "assets/css/domains/*.css"
  ],
  "permissions": ["activeTab"]
}
